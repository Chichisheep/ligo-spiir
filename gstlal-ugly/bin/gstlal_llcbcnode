print "</div></td></tr>"

print "<tr><td><div id='canvasc'>"
plot(baseurl+'_snr_history.txt', "history", ylabel = "SNR", xlabel = "Time since last trigger (s)")
print "</div></td>"

print "<td><div id='canvasd'>"
plot(baseurl+'_ram_history.txt', "history", ylabel = "RAM (GB)", xlabel = "Time before now (s)")
print "</div></td></tr>"

print"</table>"

print "<table face='Arial'>"

print "<tr><td><div id='canvase'>"
livetime_plot(baseurl+'_H1strain_add_drop.txt', baseurl+'_H1state_vector_on_off_gap.txt')
print "</div></td>"

print "<td><div id='canvasf'>"
livetime_plot(baseurl+'_H2strain_add_drop.txt', baseurl+'_H2state_vector_on_off_gap.txt')
print "</div></td></tr>"

print "<tr><td><div id='canvasg'>"
livetime_plot(baseurl+'_L1strain_add_drop.txt', baseurl+'_L1state_vector_on_off_gap.txt')
print "</div></td>"

print "<td><div id='canvash'>"
livetime_plot(baseurl+'_V1strain_add_drop.txt', baseurl+'_V1state_vector_on_off_gap.txt')
print "</div></td></tr>"

print"</table>"


try:
	plotsnrchisq(baseurl+'-likelihood.xml.gz')
except ImportError:
	print "<h2>requires pylal to produce snr / chisq plots</h2>"


print "</body>"

